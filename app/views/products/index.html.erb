<h1 class='mt-3 text-center'>Products</h1>
<section class='d-flex justify-content-center align-items-center'>
  <%= link_to 'Add a new Product', new_product_path, class:'btn btn-primary m-2' %>
  <%= link_to 'Cheap Fruits', "#{products_path}?query=10", class:'btn'%>
</section>
<main class='d-flex justify-content-center align-items-center flex-wrap mt-4'>
  <% @products.each do |product|%>
    <%= link_to product do%>
      <div class="card m-2 product-card">
        <div class="card-header">
          <h5 class='text-center'><%= product.name %></h5>
        </div>
        <div class="card-body">
          <p class="card-text"><%= product.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</main>
